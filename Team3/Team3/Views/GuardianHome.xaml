<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Team3.Views.GuardianHome"
             Title="Home Page">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Guardian, Welcome to Team 3 App!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="20" TextColor="#3399ff"/>
            <Button Text="Assignment pending status:" x:Name="submitButton1" 
                     VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" BackgroundColor="#3399ff" TextColor="White" Clicked="PendingAssignment_BtnClick" />
            <Button Text="Assignment completed status" BackgroundColor="#3399ff" TextColor="White" x:Name="submitButton2"
                     VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"  Clicked="CompletedAssignment_BtnClick" />
            <Button Text="Return to Login" BackgroundColor="#3399ff" TextColor="White" x:Name="submitButton3"
                     VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>