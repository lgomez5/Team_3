<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Team3.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Team 3 Project!" FontSize="20"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" TextColor="#3399ff"/>

            <Label Text="ESHPTC" FontSize="18"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" TextColor="#3399ff"/>

            <Entry x:Name="usernameEntry" Placeholder="Enter Username"/>

            <Entry x:Name="passwordEntry" Placeholder="Enter password"
                    IsSpellCheckEnabled="false"
                    IsTextPredictionEnabled="false"
                    IsPassword="true" />

            <Button Text="LogIn" BackgroundColor="#3399ff" TextColor="White" x:Name="submitButton"
                Clicked="OnButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>